{
    "name": "futuretek/data-mapper",
    "description": "A lightweight, reflection-based PHP 8.1+ data mapping library for converting associative arrays into typed PHP objects (POPOs), and back. Ideal for OpenAPI-generated DTOs, form handling, and request/response serialization in modern API architectures.",
    "keywords": [
        "data mapper",
        "cute"
    ],
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://www.futuretek.cz/",
    "authors": [
        {
            "name": "Lukáš Černý",
            "email": "lukas.cerny@futuretek.cz",
            "homepage": "https://www.futuretek.cz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "futuretek\\datamapper\\": "src",
            "futuretek\\datamapper\\tests\\": "tests"
        }
    },
    "config": {
        "platform-check": "php-only",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.36"
    }
}
